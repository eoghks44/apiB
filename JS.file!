	          alert('선택사항은 최대 2개까지 가능합니다. 수정시에 기존 체크를 해제해주세요');
	      }

	      if (checkbox === checkboxes[4]) {
	          textbox_elem.disabled = checkbox.checked ? false : true;
	          textbox_elem.value = checkbox.checked ? textbox_elem.value : '';
	      }

	      if (count > maxCount && checkbox.checked) {
	          checkbox.checked = false;
	          alert('선택사항은 최대 2개까지 가능합니다. 수정시에 기존 체크를 해제해주세요');
	      }
	  }
	  function selectOnlyOne(checkbox) {
		    const checkboxes = document.querySelectorAll('.SEL_Q6_2');

		    checkboxes.forEach(chk => {
		        if (chk !== checkbox) {
		            chk.checked = false;
		        }
		    });

		    const textField = document.getElementById('SelText6_2');
		    if (checkbox.checked && checkbox.id === 'chk5') {
		        textField.disabled = false;
		        textField.readOnly = true;
		    } else {
		        textField.disabled = true;
		        textField.readOnly = false;
		    }
		}



function checkOnlyOne(element,text) {
	 const textbox_elem = document.getElementById(element,text);
	  const checked = document.getElementsByClassName(elemnet,text);


	  textbox_elem.disabled = element.checked ? false : true;  
	  const checkboxes = document.getElementsByName("chk5_2");
	  
	  checkboxes.forEach((cb) => {
	    cb.checked = false;
	  })
	  textbox_elem.disabled = true;
	  element.checked = true;
	}
