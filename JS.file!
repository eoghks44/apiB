	alert("클릭");
}
function checkSelectAll() {
    // 각 질문에 대한 체크박스들을 선택합니다.
    const SEL_Q4Checkboxes = document.querySelectorAll('input[name="SEL_Q4"]');
    const SEL_Q5Checkboxes = document.querySelectorAll('.SEL_Q5_1, .SEL_Q5_2');
    const SEL_Q6Checkboxes = document.querySelectorAll('.SEL_Q6_1, .SEL_Q6_2');

    // "전체선택" 체크박스와 텍스트 입력란을 선택합니다.
    const chk4All = document.querySelector('input[name="chk4all"]');
    const Text5Inputs = document.querySelectorAll('#SelText5_1, #SelText5_2');
    const Text6Inputs = document.querySelectorAll('#SelText6_1, #SelText6_2');

    // SEL_Q5 옵션 활성화 함수
    function activateSELQ5() {
        SEL_Q5Checkboxes.forEach(checkbox => {
            checkbox.disabled = false;
        });
        SEL_Q6Checkboxes.forEach(checkbox => {
            checkbox.disabled = true;
        });
        Text5Inputs.forEach(input => {
            input.value = '';
            input.disabled = true;
        });
        Text6Inputs.forEach(input => {
            input.value = '';
            input.disabled = true;
        });
    }

    // SEL_Q6 옵션 활성화 함수
    function activateSELQ6() {
        SEL_Q5Checkboxes.forEach(checkbox => {
            checkbox.disabled = true;
            checkbox.checked = false;
        });
        SEL_Q6Checkboxes.forEach(checkbox => {
            checkbox.disabled = false;
            checkbox.checked = false;
        });
        Text5Inputs.forEach(input => {
            input.value = '';
            input.disabled = true;
        });
        Text6Inputs.forEach(input => {
            input.value = '';
            input.disabled = true;
        });
    }

    // 모든 옵션 비활성화 함수
    function disableAll() {
        SEL_Q5Checkboxes.forEach(checkbox => {
            checkbox.disabled = true;
            checkbox.checked = false;
        });
        SEL_Q6Checkboxes.forEach(checkbox => {
            checkbox.disabled = true;
            checkbox.checked = false;
        });
        Text5Inputs.forEach(input => {
            input.value = '';
            input.disabled = true;
        });
        Text6Inputs.forEach(input => {
            input.value = '';
            input.disabled = true;
        });
    }

    // "전체선택" 체크박스의 이벤트 리스너
    chk4All.addEventListener('click', function() {
        if (this.checked) {
            // 전체 선택이 체크되면 SEL_Q6 활성화
            activateSELQ6();
            SEL_Q4Checkboxes.forEach(checkbox => {
                checkbox.checked = false;
            });
        } else {
            // 전체 선택이 해제되면 모든 옵션 비활성화
            disableAll();
        }
    });

    // SEL_Q4 옵션 체크박스의 이벤트 리스너
    SEL_Q4Checkboxes.forEach(checkbox => {
        checkbox.addEventListener('click', function() {
            if (this.checked) {
                // SEL_Q4 옵션이 선택되면 "전체선택" 체크 해제 및 SEL_Q5 활성화
                chk4All.checked = false;
                activateSELQ5();
                uncheckSELQ6();
            }
            if (![...SEL_Q4Checkboxes].some(checkbox => checkbox.checked)) {
                // 모든 SEL_Q4 옵션이 해제되면 모든 옵션 비활성화
                disableAll();
            }
        });
    });

    // SEL_Q6 옵션 해제 함수
    function uncheckSELQ6() {
        SEL_Q6Checkboxes.forEach(checkbox => {
            checkbox.checked = false;
        });
    }
}
   
	 
	  
	 
	

	  function CheckFiled(checkbox)
	  {
		 
		  const checked = document.getElementById('SEL_Q5_1');
		  if(checkbox.checked){
			  	count +=1;
			  }
		  else{
				count -=1 ; 
		  }
		  
		  if (count>maxCount){
			  alert("2개까지만 선택가능합니다. 변경시 체크사항을 풀어주세요");
			 checkbox.checked = false;
			  count -= 1;
		  }
		  
		  
		  
	  }
	  let count = 0;
	  const maxCount = 2;

	  function toggleTextbox1(checkbox) {
	      const checkboxes = document.querySelectorAll('.SEL_Q5_1');
	      const textbox_elem = document.getElementById('SelText5_1');

	      count = Array.from(checkboxes).filter(chk => chk.checked).length;

	      if (count > maxCount && checkbox.checked) {
	          checkbox.checked = false;
	          alert('선택사항은 최대 2개까지 가능합니다. 수정시에 기존 체크를 해제해주세요');
	      }

	      if (checkbox === checkboxes[4]) {
	          textbox_elem.disabled = checkbox.checked ? false : true;
	          textbox_elem.value = checkbox.checked ? textbox_elem.value : '';
	      }

	      if (count > maxCount && checkbox.checked) {
	          checkbox.checked = false;
	          alert('선택사항은 최대 2개까지 가능합니다. 수정시에 기존 체크를 해제해주세요');
	      }
	  }
	  function toggleTextbox2(checkbox) {
	      const checkboxes = document.querySelectorAll('.SEL_Q6_1');
	      const textbox_elem = document.getElementById('SelText6_1');

	      count = Array.from(checkboxes).filter(chk => chk.checked).length;

	      if (count > maxCount && checkbox.checked) {
	          checkbox.checked = false;
	          alert('선택사항은 최대 2개까지 가능합니다. 수정시에 기존 체크를 해제해주세요');
	      }

	      if (checkbox === checkboxes[4]) {
	          textbox_elem.disabled = checkbox.checked ? false : true;
	          textbox_elem.value = checkbox.checked ? textbox_elem.value : '';
	      }

	      if (count > maxCount && checkbox.checked) {
	          checkbox.checked = false;
	          alert('선택사항은 최대 2개까지 가능합니다. 수정시에 기존 체크를 해제해주세요');
	      }
	  }
	  function toggleTextbox3(checkbox) {
	      const checkboxes = document.querySelectorAll('.SEL_Q7');
